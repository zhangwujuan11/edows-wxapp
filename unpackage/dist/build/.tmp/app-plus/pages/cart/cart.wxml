<view class="container"><block wx:if="{{!hasLogin||empty===true}}"><view class="empty"><image src="/static/emptyCart.jpg" mode="aspectFit"></image><block wx:if="{{hasLogin}}"><view class="empty-tips">空空如也<block wx:if="{{hasLogin}}"><navigator class="navigator" url="../index/index" open-type="switchTab">随便逛逛></navigator></block></view></block><block wx:else><view class="empty-tips">空空如也<view data-event-opts="{{[['tap',[['navToLogin',['$event']]]]]}}" class="navigator" bindtap="__e">去登陆></view></view></block></view></block><block wx:else><view><view class="cart-list"><block wx:for="{{cartList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><block><view class="{{['cart-item',(index!==cartList.length-1)?'b-b':'']}}"><view class="image-wrappers"><image src="{{item.isExpire?'/static/noGoods.jpg':item.imgPath}}" mode="aspectFill" data-event-opts="{{[['tap',[['navToDetailPage',['$0'],[[['cartList','id',item.id]]]]]]]}}" bindtap="__e"></image><block wx:if="{{item.isExpire==0}}"><view data-event-opts="{{[['tap',[['check',['item',index]]]]]}}" class="{{['yticon icon-xuanzhong2 checkbox',(item.checked)?'checked':'']}}" bindtap="__e"></view></block></view><view class="item-right"><text data-event-opts="{{[['tap',[['navToDetailPage',['$0'],[[['cartList','id',item.id]]]]]]]}}" class="title clamp2" bindtap="__e">{{item.productName}}</text><view class="attr"><block wx:for="{{item.attrValueVOList}}" wx:for-item="subItem" wx:for-index="subIndex" wx:key="subIndex"><text>{{''+subItem.attrValue+''}}</text></block></view><text class="price">{{"¥"+item.price}}</text></view><block wx:if="{{item.isExpire==0}}"><view><uni-number-box class="step" vue-id="{{'1-'+index}}" min="{{1}}" max="{{stock}}" value="{{item.num}}" isMax="{{item.num>=stock?true:false}}" isMin="{{item.num===1}}" index="{{index}}" data-event-opts="{{[['^eventChange',[['numberChange']]],['^input',[['__set_model',['$0','num','$event',[]],[[['cartList','id',item.id]]]]]]]}}" bind:eventChange="__e" bind:input="__e" bind:__l="__l"></uni-number-box></view></block><text data-event-opts="{{[['tap',[['deleteCartItem',[index]]]]]}}" class="del-btn yticon icon-fork" bindtap="__e"></text></view></block></block></view><view class="action-section"><view class="checkbox"><image src="{{allChecked?'/static/selected.png':'/static/select.png'}}" mode="aspectFit" data-event-opts="{{[['tap',[['check',['all']]]]]}}" bindtap="__e"></image><view data-event-opts="{{[['tap',[['clearCart',['$event']]]]]}}" class="{{['clear-btn ',(allChecked)?'show':'']}}" bindtap="__e">清空</view></view><view class="total-box"><text class="price ">{{"¥"+total}}</text></view><button class="no-border confirm-btn blueGraShadow" type="primary" data-event-opts="{{[['tap',[['createOrder',['$event']]]]]}}" bindtap="__e">去结算</button></view></view></block></view>