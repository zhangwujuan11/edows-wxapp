<view><view class="yt-list"><view class="yt-list-cell b-b"><text class="cell-tit clamp">订单编号</text><text class="cell-tip">{{orderInfo.orderSn}}</text></view></view><view class="goods-section"><block wx:for="{{productList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="g-item"><image src="{{item.imgPath}}"></image><view class="right"><text class="title clamp">{{item.productName}}</text><view class="spec"><block wx:for="{{item.attrValueVOList}}" wx:for-item="subItem" wx:for-index="subIndex" wx:key="subIndex"><text>{{''+subItem.attrValue+''}}</text></block></view><view class="price-box"><text class="price">{{"￥"+item.productPrice}}</text><text class="number">{{"x "+item.productNum}}</text></view></view></view></block></view><view class="score yt-list-cell b-b"><view class="left">商品评分</view><view class="right"><block wx:for="{{userStars}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['starTap',[index]]]]]}}" class="star" bindtap="__e"><image src="{{item}}"></image></view></block><text class="rtxt">{{wjxScore+".0分"}}</text></view></view><view class="conts"><textarea class="areas" placeholder="更多评价请写在这里" data-event-opts="{{[['input',[['__set_model',['','content','$event',[]]]]]]}}" value="{{content}}" bindinput="__e"></textarea></view><view class="footer"><text data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" class="submit" bindtap="__e">提交评价</text></view></view>