.uni-list-item-img{
	display: inline-block;
	width: 20%;
	border: 1rpx solid #eee;
	border-width: 0 2rpx 2rpx 0;
	padding: 10rpx 0;
	text-align: center;
	box-sizing: border-box;
}
.uni-list-item__content-img-text{
	font-size: 30rpx;
}


