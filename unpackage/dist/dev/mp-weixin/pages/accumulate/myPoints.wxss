page {
  background: #F9F9F9;
}
.points_top {
  height: 222rpx;
  text-align: center;
  padding: 60rpx 0;
  background: linear-gradient(90deg, #349CFF, #65B4FF);
  color: #FFFFFF;
  z-index: 100;
}
.points_top .num {
  width: 100%;
  text-align: center;
  font-size: 60rpx;
  font-family: PingFang SC;
  font-weight: 600;
  text-shadow: 0px 4rpx 27rpx rgba(0, 0, 0, 0.27);
}
.list-scroll-content .empty-content {
  top: 140px !important;
}
.points_list {
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
}
.points_list .points_item_top {
  height: 80rpx;
  padding: 0 30rpx;
  border-bottom: solid 1px #F0F0F0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}
.points_list .points_item_top view {
  color: #666666;
  font-weight: 400;
}
.points_list .points_items {
  display: flex;
  padding: 10rpx;
  margin: 20rpx 20rpx;
  border-bottom: solid 2px #F0F0F0;
}
.points_list .points_items .points_items_right {
  width: 15%;
  text-align: center;
}
.points_list .points_items .points_items_left {
  flex: 1;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999999;
}
.points_list .points_items .points_items_left .title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
  color: #333333;
}
.points_list .points_items .points_items_left view {
  line-height: 50rpx;
}

