page,
.content {
  background: #f8f8f8;
}
.content {
  padding-top: 140rpx;
}
.navbar {
  position: fixed;
  left: 0;
  top: 0px;
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 20rpx 0;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.06);
  z-index: 10;
}
.navbar .nav-item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 70rpx;
  width: 150rpx;
  font-size: 30rpx;
  background: #f8f8f8;
  color: #303133;
  position: relative;
  border-radius: 10rpx;
}
.navbar .nav-item.current {
  color: #339cfe;
  border: 2rpx solid #339cfe;
  background: #fff;
}
.navbar .p-box {
  display: flex;
  flex-direction: column;
}
.navbar .p-box .yticon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30rpx;
  height: 14rpx;
  line-height: 1;
  margin-left: 4rpx;
  font-size: 26rpx;
  color: #888;
}
.navbar .p-box .yticon.active {
  color: #339cfe;
}
.navbar .p-box .xia {
  -webkit-transform: scaleY(-1);
          transform: scaleY(-1);
}
.navbar .cate-item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 80rpx;
  position: relative;
  font-size: 44rpx;
}
.navbar .cate-item:after {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  border-left: 1px solid #ddd;
  width: 0;
  height: 36rpx;
}
/* 分类 */
.cate-mask {
  position: fixed;
  left: 0;
  top: 0px;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0);
  z-index: 95;
  transition: .3s;
}
.cate-mask .cate-content {
  width: 630rpx;
  height: 100%;
  background: #fff;
  float: right;
  -webkit-transform: translateX(100%);
          transform: translateX(100%);
  transition: .3s;
}
.cate-mask.none {
  display: none;
}
.cate-mask.show {
  background: rgba(0, 0, 0, 0.4);
}
.cate-mask.show .cate-content {
  -webkit-transform: translateX(0);
          transform: translateX(0);
}
.cate-list {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.cate-list .cate-item {
  display: flex;
  align-items: center;
  height: 90rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #555;
  position: relative;
}
.cate-list .two {
  height: 64rpx;
  color: #303133;
  font-size: 30rpx;
  background: #f8f8f8;
}
.cate-list .active {
  color: #339cfe;
}
/* 商品列表 */
.guess-section {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx;
  background: #f8f8f8;
}
.guess-section .guess-item {
  display: flex;
  flex-direction: column;
  width: 330rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  background: #fff;
}
.guess-section .guess-item:nth-child(2n+1) {
  margin-right: 30rpx;
}
.guess-section .image-wrapper {
  width: 290rpx;
  height: 290rpx;
  border-radius: 3px;
  overflow: hidden;
  background: #fff;
}
.guess-section .image-wrapper image {
  width: 290rpx;
  height: 290rpx;
  opacity: 1;
}
.guess-section .title {
  padding: 14rpx 0 0 0;
  font-size: 26rpx;
  color: #303133;
  line-height: 38rpx;
  height: 94rpx;
}
.guess-section .price-box {
  padding: 14uxp 10rpx 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #909399;
}
.guess-section .price {
  font-size: 32rpx;
  color: #f04c41;
  line-height: 1;
}
.guess-section .price:before {
  content: '￥';
  font-size: 26rpx;
}
.goods-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx;
  background: #fff;
}
.goods-list .goods-item {
  display: flex;
  flex-direction: column;
  width: 48%;
  padding: 10rpx 0;
  margin-bottom: 40rpx;
}
.goods-list .goods-item:nth-child(2n+1) {
  margin-right: 4%;
}
.goods-list .image-wrapper {
  width: 330rpx;
  height: 330rpx;
  padding: 0;
  border-radius: 3px;
  overflow: hidden;
}
.goods-list .image-wrapper image {
  width: 330rpx;
  height: 330rpx;
  opacity: 1;
}
.goods-list .title {
  font-size: 28rpx;
  color: #303133;
  line-height: 60rpx;
  padding: 0 10rpx;
}

