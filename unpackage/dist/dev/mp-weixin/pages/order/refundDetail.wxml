<view><view class="state-section blueGradient"><image src="../../static/ok.png"></image><text>{{orderInfo.refundStatusValue}}</text></view><view class="price-section"><view class="p-items"><view class="p-item"><text>退款总金额</text><text class="red">{{"￥"+orderInfo.refundPrice}}</text></view></view></view><view class="goods-section"><view class="g-header b-b"><text class="name">退款商品信息</text></view><block wx:for="{{orderInfo.productList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view data-event-opts="{{[['tap',[['navToDetailPage',['$0'],[[['orderInfo.productList','',index]]]]]]]}}" class="g-item" bindtap="__e"><image src="{{item.imgPath}}"></image><view class="right"><text class="title clamp">{{item.productName}}</text><view class="spec"><block wx:for="{{item.attrValueVOList}}" wx:for-item="subItem" wx:for-index="subIndex" wx:key="subIndex"><text>{{''+subItem.attrValue+''}}</text></block></view><view class="price-box"><text class="price">{{"￥"+item.productPrice}}</text><text class="number">{{"x "+item.productNum}}</text></view></view></view></block></block></view><view class="facture-setion"><view class="f-item"><text class="grey ">退款原因</text><text>{{orderInfo.refundReason}}</text></view><block wx:if="{{orderInfo.auditDes}}"><view class="f-item"><text class="grey">商家说明</text><text class="blue">{{orderInfo.auditDes}}</text></view></block><view class="f-item"><text class="grey">订单编号</text><text>{{orderSn}}</text></view></view><view class="footer"><view class="innerFooter"><block wx:if="{{orderInfo.refundStatus==200}}"><block><button data-event-opts="{{[['tap',[['canncelRefundApply',['$event']]]]]}}" class="action-btn red" bindtap="__e">取消退款</button></block></block><block wx:if="{{orderInfo.refundStatus==202}}"><block><button data-event-opts="{{[['tap',[['refundOrder',['$event']]]]]}}" class="action-btn red" bindtap="__e">申请退款</button></block></block></view></view></view>